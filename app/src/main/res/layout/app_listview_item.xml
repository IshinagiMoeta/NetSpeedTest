<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingTop="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:layout_weight="1.5"
            android:id="@+id/app_image"
            android:scaleType="fitCenter"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginRight="5dp"
            app:srcCompat="@mipmap/ic_launcher_round"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="5.5"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/app_name"
                android:lines="1"
                android:layout_weight="1"
                android:gravity="center|left"
                android:textColor="@color/list_color_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
            <TextView
                android:gravity="center|left"
                android:layout_weight="1"
                android:textColor="@color/list_color_3"
                android:id="@+id/app_uid"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/list_tx_hint"
                android:layout_width="wrap_content"
                android:layout_height="0dp"/>

            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="@string/list_rx_hint"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_weight="1"
                android:gravity="center|right"
                android:id="@+id/app_totalRxBytes"
                android:textColor="@color/list_color_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
            <TextView
                android:layout_weight="1"
                android:gravity="center|right"
                android:id="@+id/app_totalTxBytes"
                android:textColor="@color/list_color_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
        </LinearLayout>

    </LinearLayout>








</RelativeLayout>